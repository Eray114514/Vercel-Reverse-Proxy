{
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "https://:PROXY_TARGET/$1",
      "has": [
        {
          "type": "host",
          "value": ":PROXY_TARGET"
        }
      ]
    }
  ],
  "env": {
    "PROXY_TARGET": "@proxy-target"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "upgrade-insecure-requests"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer"
        }
      ]
    }
  ]
}